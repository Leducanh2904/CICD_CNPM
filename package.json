{
  "private": true,
  "name": "pern-store",
  "version": "1.0.0",
  "main": "index.js",
  "engines": { "node": ">=18" },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "concurrently": "^7.6.0"
  },
  "scripts": {
    "start": "node server",
    "server": "cd server && nodemon",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",

    "test": "jest --runInBand",
    "test:unit": "jest server/__tests__/unit --runInBand --detectOpenHandles",
    "test:integration": "jest --config jest.config.js --runInBand",
    "test:controllers": "jest server/__tests__/controllers --runInBand",
    "test:coverage": "jest --coverage --runInBand",

    "test:all": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.2",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "pg": "^8.16.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.2"
  }
}
